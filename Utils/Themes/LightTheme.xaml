<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Include Shared Resources -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="SharedResources.xaml" />
    </ResourceDictionary.MergedDictionaries>



    <!-- dark tint for dropshadow effect -->
    <DropShadowEffect x:Key="NoteShadowEffect" ShadowDepth="5" BlurRadius="8" Color="#FF999999" />
    



    <!-- General Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF" />
    <!-- White -->
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#FFCCCCCC" />
    <!-- Light Gray -->

    <!-- Main Grid -->
    <SolidColorBrush x:Key="MainGridBackgroundBrush" Color="#FFFAFAFA" />
    <!-- Almost White -->

    <!-- Header -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFE0E0E0" />
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#FF000000" />

    <!-- Search Box -->
    <SolidColorBrush x:Key="SearchBoxBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="SearchBoxForegroundBrush" Color="#FF000000" />

    <!-- ListView -->
    <SolidColorBrush x:Key="ListViewBackgroundBrush" Color="#FFFAFAFA" />
    <SolidColorBrush x:Key="ListViewForegroundBrush" Color="#FF000000" />

    <!-- Note Content -->
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFAFAFA" />

    <!-- Note Block -->
    <SolidColorBrush x:Key="NoteBlockBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="NoteBlockBorderBrush" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="NoteDateForegroundBrush" Color="#FF999999" />
    <SolidColorBrush x:Key="NoteTitleBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="NoteTitleForegroundBrush" Color="#FF000000" />
    <SolidColorBrush x:Key="NoteTextForegroundBrush" Color="#FF000000" />


    <!-- #NoteBlockChromeNoteSelected light grey for selection -->
    <SolidColorBrush x:Key="SelectedNoteBackgroundBrush" Color="#FFF0F0F0" />
    <!-- #NoteBlockChromeNoteSelected light grey border -->
    <SolidColorBrush x:Key="SelectedNoteBorderBrush" Color="#FFDDDDDD" />
    


</ResourceDictionary>
